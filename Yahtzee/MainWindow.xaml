<Window x:Class="Yahtzee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yahtzee"
        xmlns:myControl ="clr-namespace:Yahtzee"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" Name="diceRoller">
        <myControl:ControlDie  Width="48" Height="48" DieValue="{Binding MyDice[0].FaceDie.Value}"/>
        <myControl:ControlDie  Width="48" Height="48" DieValue="{Binding MyDice[1].FaceDie.Value}"/>
        <myControl:ControlDie  Width="48" Height="48" DieValue="{Binding MyDice[2].FaceDie.Value}"/>
        <myControl:ControlDie  Width="48" Height="48" DieValue="{Binding MyDice[3].FaceDie.Value}"/>
        <myControl:ControlDie  Width="48" Height="48" DieValue="{Binding MyDice[4].FaceDie.Value}"/>
    </StackPanel>
</Window>
