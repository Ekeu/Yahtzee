<Window x:Class="Yahtzee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yahtzee"
        xmlns:myControl ="clr-namespace:Yahtzee"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Name="diceRoller" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Button Content="Roll!" DockPanel.Dock="Bottom" Margin="0,5,0,50" Padding="0,10,0,10" Command="{Binding Roll}"></Button>
        <ItemsControl ItemsSource="{Binding MyDice}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding Keep.Value}" VerticalContentAlignment="Bottom" Margin="5">
                        <myControl:ControlDie  Width="48" Height="48" DieValue="{Binding FaceDie.Value}"/>
                    </CheckBox>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
        </ItemsControl>
    </DockPanel>
</Window>
